{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "max-len": ["error", { "code": 200 }],
        "object-curly-newline": ["error", {
            "ObjectPattern": { "minProperties": 5 }
        }],
        "no-underscore-dangle":  ["error", { "allow": ["__get__", "__set__"] }]
    }
}
